<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>

        <property name="connection.url">jdbc:mysql://localhost:3306/diplom</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">testskill</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">validate</property>

        <mapping class="model.User" />

        <mapping class="model.Post" />
        <mapping class="model.PostComment" />
        <mapping class="model.PostVote" />

        <mapping class="model.Tag" />
        <mapping class="model.TagToPostRelation" />

        <mapping class="model.CaptchaCode" />
        <mapping class="model.GlobalSetting" />


    </session-factory>
</hibernate-configuration>